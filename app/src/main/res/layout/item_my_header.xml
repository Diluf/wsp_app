<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:minHeight="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_inline_components"
        android:layout_marginTop="@dimen/margin_inline_components"
        android:layout_marginBottom="10dp"
        android:elevation="@dimen/spinner_height"
        app:cardCornerRadius="@dimen/radius_list_item">

        <RelativeLayout
            android:id="@+id/rl_backItemHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header_back">

<!--            <ImageView-->
<!--                android:id="@+id/image_optionsItemHeader"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:layout_marginTop="@dimen/margin_inline_components_plus_2"-->
<!--                android:visibility="gone"-->
<!--                android:padding="@dimen/margin_inline_components"-->
<!--                android:src="@drawable/ic_more_"-->
<!--                android:tint="@color/colorPrimary" />-->

            <ImageView
                android:id="@+id/image_compulsoryItemHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/margin_inline_components"
                android:layout_marginRight="@dimen/bg_tooltip_padding_right"
                android:src="@drawable/ic_circle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_inline_components"
                android:layout_marginLeft="@dimen/margin_inline_components_plus_2"
                android:orientation="vertical"
                android:paddingVertical="@dimen/space_between_multi_selected_item">

                <TextView
                    android:id="@+id/tv_titleItemHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/header_right_margin"
                    android:gravity="center"
                    android:minHeight="70dp"
                    android:text="@string/title_cbo_basic_details"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/my_header_text_size" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_badgeItemHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"

                android:layout_marginLeft="15dp"
                android:background="@drawable/gradient_back"
                android:text="10"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                android:visibility="visible" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>


