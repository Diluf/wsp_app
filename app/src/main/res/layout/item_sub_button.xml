<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/margin_inline_components"
        android:id="@+id/card_itemSubButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/radius_list_item"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_badgeItemSubButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/white_back"
                android:maxWidth="32dp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:textStyle="bold"
                android:visibility="invisible" />


            <ImageView
                android:id="@+id/image_rightItemSubButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/margin_inline_components"
                android:src="@drawable/ic_right"
                android:tint="@color/colorWhite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_inline_components"
                android:layout_marginHorizontal="32dp"
                android:layout_toLeftOf="@+id/image_rightItemGndDsdButton"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_titleItemSubButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CBO NAME CBO NAME CBO NAME CBO NAME CBO NAME "
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/label_text_size" />

            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
