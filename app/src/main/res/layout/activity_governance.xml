<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaterSafetyAndClimate.Governance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:paddingHorizontal="@dimen/page_padding_h"
        android:paddingVertical="@dimen/page_padding_v">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Fair landownership of the water scheme"
            android:textSize="@dimen/label_text_size" />

        <Spinner
            android:id="@+id/spinner_fairLand_Governance"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/textView8"
            android:background="@drawable/spinner_back"></Spinner>

        <Button
            android:id="@+id/btn_rFairLand_Governance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/colorDarkGray"
            android:drawableLeft="@drawable/ic_resynch"
            android:drawablePadding="@dimen/drawable_padding_with_text"
            android:text="Resynchronize"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/space_between_components"
            android:text="Inclusive water distribution issues ensuring fair access among
ethnic/religious groups"
            android:textSize="@dimen/label_text_size" />

        <LinearLayout
            android:id="@+id/ll_inclusive_Governance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_back"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/page_padding_h"
            android:paddingVertical="@dimen/page_padding_v" />

        <Button
            android:id="@+id/btn_rInclusive_Governance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/colorDarkGray"
            android:drawableLeft="@drawable/ic_resynch"
            android:drawablePadding="@dimen/drawable_padding_with_text"
            android:text="Resynchronize"
            android:textColor="@color/colorWhite" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/space_between_components"
            android:text="Transboundary water issues"
            android:textSize="@dimen/label_text_size" />

        <LinearLayout
            android:id="@+id/ll_trans_Governance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_back"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/page_padding_h"
            android:paddingVertical="@dimen/page_padding_v" />

        <Button
            android:id="@+id/btn_rTrans_Governance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/colorDarkGray"
            android:drawableLeft="@drawable/ic_resynch"
            android:drawablePadding="@dimen/drawable_padding_with_text"
            android:text="Resynchronize"
            android:textColor="@color/colorWhite" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/space_between_components"
            android:text="Conflicts among upstream and downstream communities"
            android:textSize="@dimen/label_text_size" />

        <Spinner
            android:id="@+id/spinner_conflicts_Governance"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/textView8"
            android:background="@drawable/spinner_back"></Spinner>

        <Button
            android:id="@+id/btn_rConflicts_Governance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/colorDarkGray"
            android:drawableLeft="@drawable/ic_resynch"
            android:drawablePadding="@dimen/drawable_padding_with_text"
            android:text="Resynchronize"
            android:textColor="@color/colorWhite" />

        <!--        Optional Area start-->

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_optionalOnYesConflicts_Governance"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/rect_back"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/page_padding_h"
            android:paddingVertical="@dimen/page_padding_v">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="what are the reasons"
                android:textSize="@dimen/label_text_size" />

            <LinearLayout
                android:id="@+id/ll_conflicts_Governance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rect_back"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/page_padding_h"
                android:paddingVertical="@dimen/page_padding_v" />

            <Button
                android:id="@+id/btn_rOptionalOnYesConflicts_Governance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />


        </LinearLayout>

        <!--        Optional Area end-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/space_between_components"
            android:text="Is there a chance or exist conflicts among communities"
            android:textSize="@dimen/label_text_size" />

        <Spinner
            android:id="@+id/spinner_isThere_Governance"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/textView8"
            android:background="@drawable/spinner_back"></Spinner>

        <Button
            android:id="@+id/btn_rIsThere_Governance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/colorDarkGray"
            android:drawableLeft="@drawable/ic_resynch"
            android:drawablePadding="@dimen/drawable_padding_with_text"
            android:text="Resynchronize"
            android:textColor="@color/colorWhite" />

        <!--        Optional Area start-->

        <LinearLayout
            android:id="@+id/ll_optionalOnYesIsThere_Governance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/rect_back"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/page_padding_h"
            android:paddingVertical="@dimen/page_padding_v">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="what are the potential reasons"
                android:textSize="@dimen/label_text_size" />

            <LinearLayout
                android:id="@+id/ll_isThere_Governance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rect_back"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/page_padding_h"
                android:paddingVertical="@dimen/page_padding_v" />

            <Button
                android:id="@+id/btn_rOptionalOnYesIsThere_Governance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />


        </LinearLayout>

        <!--        Optional Area end-->

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/space_between_components"
            android:backgroundTint="@color/btnSave"
            android:paddingHorizontal="@dimen/button_padding_h"
            android:paddingVertical="@dimen/button_padding_v"
            android:text="Save"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/button_text_size" />


    </LinearLayout>


</ScrollView>