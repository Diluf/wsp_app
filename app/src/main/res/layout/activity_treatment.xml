<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WaterSafetyAndClimate.ExistingQa">

    <include layout="@layout/item_header_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WaterSafetyAndClimate.Treatment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/page_padding_h"
            android:paddingVertical="@dimen/page_padding_v">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Source type"
                android:textSize="@dimen/label_text_size" />

            <Spinner
                android:id="@+id/spinner_sourceType_Treatment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/textView8"
                android:background="@drawable/spinner_back"></Spinner>

            <Button
                android:id="@+id/btn_resynchSourceType_Treatment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/space_between_components"
                android:text="Source is protection"
                android:textSize="@dimen/label_text_size" />

            <Spinner
                android:id="@+id/spinner_sourceIsPro_Treatment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/textView8"
                android:background="@drawable/spinner_back"></Spinner>

            <Button
                android:id="@+id/btn_resynchSourceIsPro_Treatment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/space_between_components"
                android:text="Intake is protection"
                android:textSize="@dimen/label_text_size" />

            <Spinner
                android:id="@+id/spinner_intake_Treatment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/textView8"
                android:background="@drawable/spinner_back"></Spinner>

            <Button
                android:id="@+id/btn_resynchIntake_Treatment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/space_between_components"
                android:text="Availability of the treatment system"
                android:textSize="@dimen/label_text_size" />


            <Spinner
                android:id="@+id/spinner_avail_Treatment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/textView8"
                android:background="@drawable/spinner_back"></Spinner>

            <Button
                android:id="@+id/btn_resynchAvail_Treatment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />

            <!--        Optional Area start-->
            <!--        Optional Area start-->
            <!--        Optional Area start-->
            <!--        Optional Area start-->
            <!--        Optional Area start-->
            <!--        Optional Area start-->

            <LinearLayout
                android:id="@+id/ll_optionalOnAvail_Treatment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rect_back"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/page_padding_h"
                android:paddingVertical="@dimen/page_padding_v"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="indicate about conventional modules (select out of standard list, eg.
aerator etc)"
                    android:textSize="@dimen/text_size_sub_text" />

                <LinearLayout
                    android:id="@+id/ll_indicate_Treatment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_back"
                    android:orientation="vertical"
                    android:padding="@dimen/page_padding_h" />

                <Button
                    android:id="@+id/btn_resynchIndicate_Treatment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:backgroundTint="@color/colorDarkGray"
                    android:drawableLeft="@drawable/ic_resynch"
                    android:drawablePadding="@dimen/drawable_padding_with_text"
                    android:text="Resynchronize"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/space_between_components"
                    android:text="Special modules (Nano filtration etc)"
                    android:textSize="@dimen/text_size_sub_text" />

                <LinearLayout
                    android:id="@+id/ll_special_Treatment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_back"
                    android:orientation="vertical"
                    android:padding="@dimen/page_padding_h" />

                <Button
                    android:id="@+id/btn_resynchSpecial_Treatment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:backgroundTint="@color/colorDarkGray"
                    android:drawableLeft="@drawable/ic_resynch"
                    android:drawablePadding="@dimen/drawable_padding_with_text"
                    android:text="Resynchronize"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/space_between_components"
                    android:text="Other Treatment techniques"
                    android:textSize="@dimen/text_size_sub_text" />

                <LinearLayout
                    android:id="@+id/ll_other_Treatment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_back"
                    android:orientation="vertical"
                    android:padding="@dimen/page_padding_h" />

                <Button
                    android:id="@+id/btn_resynchOther_Treatment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:backgroundTint="@color/colorDarkGray"
                    android:drawableLeft="@drawable/ic_resynch"
                    android:drawablePadding="@dimen/drawable_padding_with_text"
                    android:text="Resynchronize"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <!--        Optional Area end-->
            <!--        Optional Area end-->
            <!--        Optional Area end-->
            <!--        Optional Area end-->
            <!--        Optional Area end-->
            <!--        Optional Area end-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/space_between_components"
                android:text="Water quality parameters monitored"
                android:textSize="@dimen/label_text_size" />

            <LinearLayout
                android:id="@+id/ll_waterQ_Treatment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_back"
                android:orientation="vertical"
                android:padding="@dimen/page_padding_h" />

            <Button
                android:id="@+id/btn_resynchWaterQ_Treatment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/space_between_components"
                android:text="Current risks identified in water treatment"
                android:textSize="@dimen/label_text_size" />

            <LinearLayout
                android:id="@+id/ll_current_Treatment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_back"
                android:orientation="vertical"
                android:padding="@dimen/page_padding_h" />

            <Button
                android:id="@+id/btn_resynchCurrent_Treatment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/space_between_components"
                android:text="Risk mitigation / improvement at treatment"
                android:textSize="@dimen/label_text_size" />

            <LinearLayout
                android:id="@+id/ll_riskMiti_Treatment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_back"
                android:orientation="vertical"
                android:padding="@dimen/page_padding_h" />

            <Button
                android:id="@+id/btn_resynchRiskMiti_Treatment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btn_saveActivityTreatment"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/space_between_components"
                android:backgroundTint="@color/btnSave"
                android:paddingHorizontal="@dimen/button_padding_h"
                android:paddingVertical="@dimen/button_padding_v"
                android:text="Save"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/button_text_size" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>