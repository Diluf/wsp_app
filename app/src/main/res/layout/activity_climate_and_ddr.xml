<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WaterSafetyAndClimate.ClimateAndDdr">

    <include layout="@layout/item_header_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/page_padding_h"
            android:paddingVertical="@dimen/page_padding_v">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Is the water supply system is affected by climatic events"
                android:textSize="@dimen/label_text_size" />

            <Spinner
                android:id="@+id/spinner_isTheWater_ClimateAndDrr"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/textView8"
                android:background="@drawable/spinner_back"></Spinner>


            <Button
                android:id="@+id/btn_rIsTheWater_ClimateAndDrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />

            <!--        Optional Area start-->

            <LinearLayout
                android:animateLayoutChanges="true"
                android:id="@+id/ll_optionalOnYes_ClimateAndDrr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rect_back"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/page_padding_h"
                android:paddingVertical="@dimen/page_padding_v">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="how it impacts seasonally on the water supply system"
                    android:textSize="@dimen/label_text_size" />


                <LinearLayout
                    android:id="@+id/ll_onYesHowItImpacts_ClimateAndDrr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_back"
                    android:orientation="vertical"
                    android:padding="@dimen/page_padding_h" />


                <Button
                    android:id="@+id/btn_rOnYesHowItImpacts_ClimateAndDrr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:backgroundTint="@color/colorDarkGray"
                    android:drawableLeft="@drawable/ic_resynch"
                    android:drawablePadding="@dimen/drawable_padding_with_text"
                    android:text="Resynchronize"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/space_between_components"
                    android:text="what are they"
                    android:textSize="@dimen/label_text_size" />


                <LinearLayout
                    android:id="@+id/ll_onYesWhatAreThey_ClimateAndDrr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_back"
                    android:orientation="vertical"
                    android:padding="@dimen/page_padding_h" />

                <Button
                    android:id="@+id/btn_rOnYesWhatAreThey_ClimateAndDrr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:backgroundTint="@color/colorDarkGray"
                    android:drawableLeft="@drawable/ic_resynch"
                    android:drawablePadding="@dimen/drawable_padding_with_text"
                    android:text="Resynchronize"
                    android:textColor="@color/colorWhite" />


                <!--            Nested Optional Area Drought Start-->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_optionalOnEffectOnDrought_ClimateAndDrr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rect_back_dark"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/page_padding_h"
                    android:paddingVertical="@dimen/page_padding_v">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="what are the effects"
                        android:textSize="@dimen/label_text_size" />


                    <LinearLayout
                        android:id="@+id/ll_onYesAsBWhatAreTheEffectsOnDrought_ClimateAndDrr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_back"
                        android:orientation="vertical"
                        android:padding="@dimen/page_padding_h" />

                    <Button
                        android:id="@+id/btn_rOnYesAsBWhatAreTheEffectsOnDrought_ClimateAndDrr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:backgroundTint="@color/colorDarkGray"
                        android:drawableLeft="@drawable/ic_resynch"
                        android:drawablePadding="@dimen/drawable_padding_with_text"
                        android:text="Resynchronize"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

                <!--            Nested Optional Area Drought ending-->

                <!--            Nested Optional Flood Area Start-->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_optionalOnEffectOnFlood_ClimateAndDrr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rect_back_dark"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/page_padding_h"
                    android:paddingVertical="@dimen/page_padding_v">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="what are the effects"
                        android:textSize="@dimen/label_text_size" />


                    <LinearLayout
                        android:id="@+id/ll_onYesAsBWhatAreTheEffectsOnFlood_ClimateAndDrr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_back"
                        android:orientation="vertical"
                        android:padding="@dimen/page_padding_h" />

                    <Button
                        android:id="@+id/btn_rOnYesAsBWhatAreTheEffectsOnFlood_ClimateAndDrr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:backgroundTint="@color/colorDarkGray"
                        android:drawableLeft="@drawable/ic_resynch"
                        android:drawablePadding="@dimen/drawable_padding_with_text"
                        android:text="Resynchronize"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

                <!--            Nested Optional Flood Area ending-->




            </LinearLayout>

            <!--        Optional Area end-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/space_between_components"
                android:text="Water is available throughout the year without interruptions"
                android:textSize="@dimen/label_text_size" />

            <Spinner
                android:id="@+id/spinner_waterIsAvail_ClimateAndDrr"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/textView8"
                android:background="@drawable/spinner_back"></Spinner>


            <Button
                android:id="@+id/btn_rWaterIsAvail_ClimateAndDrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />

            <!--        Optional Area start-->

            <LinearLayout
                android:id="@+id/ll_optionalOnNo_ClimateAndDrr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rect_back"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/page_padding_h"
                android:paddingVertical="@dimen/page_padding_v">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/space_between_components"
                    android:text="what are the reasons"
                    android:textSize="@dimen/label_text_size" />


                <LinearLayout
                    android:id="@+id/ll_onNoWhatAreTheReasons_ClimateAndDrr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_back"
                    android:orientation="vertical"
                    android:padding="@dimen/page_padding_h" />

                <Button
                    android:id="@+id/btn_rOnNoWhatAreTheReasons_ClimateAndDrr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:backgroundTint="@color/colorDarkGray"
                    android:drawableLeft="@drawable/ic_resynch"
                    android:drawablePadding="@dimen/drawable_padding_with_text"
                    android:text="Resynchronize"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <!--        Optional Area end-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/space_between_components"
                android:text="What are sources of energy for water pumping"
                android:textSize="@dimen/label_text_size" />

            <Spinner
                android:id="@+id/spinner_whatAreTheS_ClimateAndDrr"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/textView8"
                android:background="@drawable/spinner_back"></Spinner>

            <Button
                android:id="@+id/btn_rWhatAreTheS_ClimateAndDrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/space_between_components"
                android:text="What are the water recharging options"
                android:textSize="@dimen/label_text_size" />


            <LinearLayout
                android:id="@+id/ll_whatAreTheWaterRecharging_ClimateAndDrr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_back"
                android:orientation="vertical"
                android:padding="@dimen/page_padding_h" />


            <Button
                android:id="@+id/btn_rWhatAreTheWaterRecharging_ClimateAndDrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/space_between_components"
                android:text="Options to reduce water leakages- non revenue water"
                android:textSize="@dimen/label_text_size" />


            <LinearLayout
                android:id="@+id/ll_optionsToReduce_ClimateAndDrr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_back"
                android:orientation="vertical"
                android:padding="@dimen/page_padding_h" />


            <Button
                android:id="@+id/btn_rOptionstoReduce_ClimateAndDrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/space_between_components"
                android:text="Options for mitigating the effects of drought"
                android:textSize="@dimen/label_text_size" />


            <LinearLayout
                android:id="@+id/ll_optionsDrought_ClimateAndDrr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_back"
                android:orientation="vertical"
                android:padding="@dimen/page_padding_h" />


            <Button
                android:id="@+id/btn_rOptionsDrought_ClimateAndDrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/space_between_components"
                android:text="Options for mitigating the effects of flood"
                android:textSize="@dimen/label_text_size" />


            <LinearLayout
                android:id="@+id/ll_optionsFlood_ClimateAndDrr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_back"
                android:orientation="vertical"
                android:padding="@dimen/page_padding_h" />

            <Button
                android:id="@+id/btn_rOptionsFlood_ClimateAndDrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorDarkGray"
                android:drawableLeft="@drawable/ic_resynch"
                android:drawablePadding="@dimen/drawable_padding_with_text"
                android:text="Resynchronize"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btn_saveFlood_ClimateAndDrr"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/space_between_components"
                android:backgroundTint="@color/btnSave"
                android:paddingHorizontal="@dimen/button_padding_h"
                android:paddingVertical="@dimen/button_padding_v"
                android:text="Save"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/button_text_size" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>